<div class="simple-calendar">
  <center>
    <h1> 
      <%= link_to "<<", url_for(params.merge(start_date: date_range.first - 1.day)) %>
      <%= I18n.t("date.month_names")[start_date.month] %> <%= start_date.year %> 
      <%= link_to ">>", url_for(params.merge(start_date: date_range.last + 1.day))  %>
    </h1>
  </center>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml do %>
                  TEXT: <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id="eventModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Event</h4>
      </div>
      <div class="modal-body">
        <%= form_tag("new_event", method: "post", role:"form") do %>
          <div class="form-group">
            <%= label_tag(:name, "Name") %>
            <%= text_field_tag(name="name",value=nil, options = {class: "form-control"}) %>
          </div>
          <div class="form-group">
            <%= label_tag(:location, "Location") %>
            <%= text_field_tag(name="location",value=nil, options = {class: "form-control"}) %>
          </div>
          <%= hidden_field_tag(name="eventdate") %>
          <%= hidden_field_tag(name="currentuser",value=nil) %>
      </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
